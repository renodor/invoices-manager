<div class="flex justify-center">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col gap-1.5 w-full sm:w-1/2"}) do |f| %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                placeholder: true,
                label: false,
                input_html: { autocomplete: 'email' } %>
    <%= f.input :password,
                required: false,
                placeholder: true,
                label: false,
                input_html: { autocomplete: 'current-password' } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, t('devise.sessions.new.sign_in'), class: "btn-dark !py-1.5" %>
  <% end %>
</div>
