<div class="container container--small">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form form--login' }) do |f| %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                placeholder: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                placeholder: true,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, t('devise.sessions.new.sign_in'), class: 'btn btn--dark btn--full-width' %>
  <% end %>
</div>
