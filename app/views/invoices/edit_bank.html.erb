<%= turbo_frame_tag dom_id(@invoice, :payment) do %>
  <%= simple_form_for @invoice, url: update_bank_invoice_path(@invoice), html: { class: 'px-4 py-3 mt-8 flex items-center gap-2' } do |f| %>
    <%= f.input :bank_id,
                collection: @banks,
                selected: @bank.id,
                label: false,
                input_html: { autofocus: true },
                wrapper_html: { class: 'w-1/2' } %>
    <%= link_to svg('return', 'w-4 h-4'), invoice_path(@invoice), class: 'btn-icon' %>
    <%= button_tag class: 'btn-icon-primary' do %>
      <%= svg('check', 'w-4 h-4') %>
    <% end %>
  <% end %>
<% end %>