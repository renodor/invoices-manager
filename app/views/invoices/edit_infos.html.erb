<%= turbo_frame_tag dom_id(@invoice, :infos) do %>
  <%= simple_form_for @invoice, url: update_infos_invoice_path(@invoice), html: { class: 'flex flex-col gap-1.5 px-4 py-3' } do |f| %>
    <div class="flex items-center justify-end gap-2">
      <%= link_to svg('return', 'w-4 h-4'), invoice_path(@invoice), class: 'btn-icon' %>
      <%= button_tag class: 'btn-icon-primary' do %>
        <%= svg('check', 'w-4 h-4') %>
      <% end %>
    </div>
    <%=
      f.input :advance,
      label: "#{t('advance_invoice')} ?",
      wrapper_html: { class: 'flex items-center gap-4' },
      input_html: { class: '!w-auto' }
    %>
    <%= f.input :number, label: false, input_html: { autofocus: true } %>
    <%= f.input :date, label: false, html5: true %>
    <%= f.input :title, label: false, input_html: { class: 'font-extrabold' } %>
    <%= f.input :flavor, label: false, collection: flavors_select_hash, include_blank: false, input_html: { class: 'h-9' } %>
  <% end %>
<% end %>