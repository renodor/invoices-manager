<%= turbo_frame_tag dom_id(invoice, :infos) do %>
  <div class="invoice-infos">
    <p>N° de Facture : <%= invoice.number %></p>
    <p>Date d'émission : <%= invoice.date %></p>
    <div class="invoice-infos__title"><%= invoice.title %></div>
    <%= link_to '',
      [:edit_infos, invoice],
      class: "full-absolute #{hide_on_pdf}" %>
  </div>
<% end %>