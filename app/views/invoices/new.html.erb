<main class="container">
  <%= link_to sanitize("&larr; Back to invoices"), invoices_path %>

  <div class="invoice">
    <%= simple_form_for @invoice, html: { class: 'form invoice--form' } do |f| %>
      <div class="invoice__header">
        <%= render 'user', invoice: @invoice %>
        <div class="invoice__client">
          <%= f.input :client_id, collection: @clients, prompt: 'Choose client', input_html: { autofocus: true } %>
        </div>
      </div>
      <div class="invoice__infos form invoice-infos--form">
        <%= f.input :number %>
        <%= f.input :date, html5: true %>
        <%= f.input :title %>
      </div>

      <%= button_tag class: 'btn btn--secondary btn--icon' do %>
        Create Invoice and start adding items
      <% end %>
    <% end %>

    <div class="invoice__body">
    </div>

    <%= render 'payment', invoice: @invoice %>
  </div>
</main>