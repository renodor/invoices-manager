<div class="flex items-center mb-4">
  <%= link_to sanitize("&larr; #{t('back_to_invoices')}"), invoices_path %>
</div>

<div class="bg-white rounded-md shadow-md p-4 mb-6">
  <%= simple_form_for @invoice, html: { class: 'flex flex-col gap-1.5' } do |f| %>
    <div class="flex justify-between mb-4">
      <div class="w-1/2 py-2 px-4 shrink-0">
        <%= render 'documents/user', user: @invoice.user %>
      </div>
      <div class="w-1/2">
        <%=
          f.input :client_id,
          collection: @clients,
          prompt: :translate,
          required: true,
          label: false,
          input_html: { autofocus: true }
        %>
      </div>
    </div>
    <div class="flex flex-col gap-1.5">
      <%=
        f.input :advance,
        label: "#{t('advance_invoice')} ?",
        wrapper_html: { class: 'flex items-center gap-3 w-fit' },
        label_html: { class: 'shrink-0'}
      %>
      <%= f.input :number, label: false %>
      <%= f.input :date, html5: true, label: false %>
      <%= f.input :title, label: false %>
      <%= f.input :flavor, collection: flavors_select_hash, include_blank: false, label: false %>
    </div>

    <%= button_tag class: 'btn-primary' do %>
      <%= t('create_invoice_and_add_items') %>
    <% end %>
  <% end %>
</div>