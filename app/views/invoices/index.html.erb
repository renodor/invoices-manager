<main class="container">
  <div class="header">
    <h1><%= t('invoice', count: @invoices.size) %></h1>
    <%= link_to t('new_invoice'),
                new_invoice_path,
                class: 'btn btn--primary' %>
  </div>

  <%= render partial: 'invoice_card', collection: @invoices, as: :invoice %>
  <div class="invoices-total">
    <%= t('total_invoiced_in_year', year: Date.current.year) %>: <b><%= number_to_currency(@invoices.map(&:total_price).sum) %></b>
  </div>
</main>