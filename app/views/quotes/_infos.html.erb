<%= turbo_frame_tag dom_id(quote, :infos) do %>
  <div class="relative px-4 py-3 duration-300 has-[a:hover]:shadow-md">
    <p><%= t('quote_number') %> : <%= quote.number %></p>
    <p><%= t('issue_date') %> : <%= quote.pretty_date %></p>
    <div class="mt-6 font-extrabold"><%= quote.title %></div>
    <%= link_to '',
      [:edit_infos, quote],
      class: "absolute inset-0 #{hide_on_pdf}" %>
  </div>
<% end %>