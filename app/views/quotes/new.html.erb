<div class="max-w-[817px] mx-auto mb-20 px-4">
  <div class="flex items-center mb-4 h-10">
    <%= link_to sanitize("&larr; #{t('back_to_quotes')}"), quotes_path %>
  </div>

  <div class="bg-white rounded-md shadow-md p-4 mb-6">
    <%= simple_form_for @quote, html: { class: 'flex flex-col gap-1.5' } do |f| %>
      <div class="flex justify-between mb-4">
        <div class="w-1/2 py-2 px-4 shrink-0">
          <%= render 'documents/user', user: @quote.user %>
        </div>
        <div class="w-1/2 flex flex-col gap-1.5 m-4">
          <%= f.input :client_name, autofocus: true, label: false, input_html: { class: "text-right" } %>
          <%= f.input :client_address1, label: false, input_html: { class: "text-right" } %>
          <%= f.input :client_address2, label: false, input_html: { class: "text-right" } %>
          <%= f.input :client_zipcode, label: false, input_html: { class: "text-right" } %>
          <%= f.input :client_city, label: false, input_html: { class: "text-right" } %>
          <%= f.input :client_country, as: :string, label: false, input_html: { class: "text-right" } %>
        </div>
      </div>
      <div class="flex flex-col gap-1.5 mx-4">
        <%= f.input :number, label: false %>
        <%= f.input :date, html5: true, label: false %>
        <%= f.input :title, label: false, input_html: { class: 'font-extrabold' } %>
        <%= f.input :flavor, collection: flavors_select_hash, include_blank: false, label: false %>
        <%= button_tag class: 'btn-primary' do %>
          <%= t('create_quote_and_add_items') %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>