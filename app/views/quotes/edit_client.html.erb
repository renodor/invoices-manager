<%= turbo_frame_tag dom_id(@quote, :client) do %>
  <div>
    <%= simple_form_for @quote, url: update_client_quote_path(@quote), html: { class: 'flex flex-col gap-1.5' } do |f| %>
      <div><%= f.input :client_name, label: false, input_html: { autofocus: true, class: 'text-right' } %></div>
      <div><%= f.input :client_address1, label: false, input_html: { class: 'text-right' } %></div>
      <div><%= f.input :client_address2, label: false, input_html: { class: 'text-right' } %></div>
      <div><%= f.input :client_zipcode, label: false, input_html: { class: 'text-right' } %></div>
      <div><%= f.input :client_city, label: false, input_html: { class: 'text-right' } %></div>
      <div><%= f.input :client_country, as: :string, label: false, input_html: { class: 'text-right' } %></div>
      <div class="flex items-center justify-end gap-2">
        <%= link_to svg('return', 'w-4 h-4'), quote_path(@quote), class: 'btn-icon' %>
        <%= button_tag class: 'btn-icon-primary' do %>
          <%= svg('check', 'w-4 h-4') %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>