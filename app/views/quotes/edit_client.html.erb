<%= turbo_frame_tag dom_id(@quote, :client) do %>
  <div>
    <%= simple_form_for @quote, url: update_client_quote_path(@quote), html: { class: 'form document-client--form' } do |f| %>
      <div><%= f.input :client_name, input_html: { autofocus: true } %></div>
      <div><%= f.input :client_address1 %></div>
      <div><%= f.input :client_address2 %></div>
      <div><%= f.input :client_zipcode %></div>
      <div><%= f.input :client_city %></div>
      <div><%= f.input :client_country, as: :string %></div>
      <div class="document-client__actions">
        <%= link_to svg('return'), quote_path(@quote), class: 'btn btn--light btn--icon' %>
        <%= button_tag class: 'btn btn--primary btn--icon' do %>
          <%= svg('check') %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>